{
    "swagger": "2.0",
    "info": {
        "description": "这是一个基于底层库构建的跨平台音乐搜索与解析统一 API 服务。",
        "title": "Go Music API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8080",
    "basePath": "/",
    "paths": {
        "/api/playlist/parse": {
            "get": {
                "description": "粘贴歌单分享链接，解析出歌单信息及包含的所有歌曲",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "歌单功能"
                ],
                "summary": "解析歌单链接",
                "parameters": [
                    {
                        "type": "string",
                        "description": "歌单分享链接",
                        "name": "link",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/handler.Response"
                        }
                    }
                }
            }
        },
        "/api/playlist/recommend": {
            "get": {
                "description": "获取指定平台的热门/每日推荐歌单",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "歌单功能"
                ],
                "summary": "每日推荐歌单",
                "parameters": [
                    {
                        "type": "string",
                        "description": "音乐平台",
                        "name": "source",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/handler.Response"
                        }
                    }
                }
            }
        },
        "/api/playlist/search": {
            "get": {
                "description": "通过关键词搜索指定平台的歌单",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "歌单功能"
                ],
                "summary": "搜索歌单",
                "parameters": [
                    {
                        "type": "string",
                        "description": "歌单关键词",
                        "name": "keyword",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "音乐平台",
                        "name": "source",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/handler.Response"
                        }
                    }
                }
            }
        },
        "/api/search": {
            "get": {
                "description": "根据关键词和指定的平台搜索音乐",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "单曲功能"
                ],
                "summary": "搜索单曲",
                "parameters": [
                    {
                        "type": "string",
                        "description": "搜索关键词",
                        "name": "keyword",
                        "in": "query",
                        "required": true
                    },
                    {
                        "type": "string",
                        "description": "音乐平台(qq/netease/kuwo/kugou/migu等)",
                        "name": "source",
                        "in": "query",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/handler.Response"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "handler.Response": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "integer"
                },
                "data": {},
                "msg": {
                    "type": "string"
                }
            }
        }
    }
}